(function main() {
  var sync = require('../lib/cassandra-syncer').sync;
  /* TOOD: arg parsing */
//  var options = {'source': './test', 'target': 'cloudfiles://username:password'}
  var options = {'source': './test', 'target': 'directory://./dest'}

  sync(options, function(err) {
    if (err) {
      console.error(err);
      if (err.stack) {
        console.error(err.stack);
      }
    }
    process.exit(1);
  })
})();
